{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Aphelion",
	"patterns": [
		{
            "include": "#instructions"
        },{
            "include": "#directives"
        },{
            "include": "#comments"
        },{
            "include": "#registers"
        },{
            "include": "#numbers"
        },{
            "include": "#strings"
        },{
            "include": "#labels"
        },{
            "include": "#characters"
        }
	],
	"repository": {
		"comments": {
			"patterns": [{
				"name": "comment.line.aphelion",
				"match": "(\\s)*//.*$"
			},{
				"name": "comment.block.aphelion",
				"begin": "/\\*",
				"end": "\\*/"
			}]
		},
        "instructions": {
			"patterns": [{
				"name": "keyword.control.aphelion",
				"match": "^\\s*(\\w+)\\s"
			},{
				"name": "keyword.control.aphelion",
				"match": "(?<=:)\\s*(\\w+)\\s"
			}]
		},
		"directives": {
			"patterns": [{
				"name": "meta.preprocessor.aphelion",
				"match": "\\.\\w+\\b"
			}]
		},
        "registers": {
            "patterns": [{
                "name": "variable.parameter.aphelion",
                "match": "\\b(r[a-kzA-KZ]|pc|sp|fp|st)\\b"
            }]
        },
        "numbers": {
            "patterns": [{
                "name": "constant.numeric.aphelion",
                "match": "\\b((0b[0-1]+|0o[0-7]+|0x[0-9a-fA-F]+|\\d+))\\b"
            }] 
        },
		"strings": {
			"name": "string.quoted.double.aphelion",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.aphelion",
					"match": "\\\\."
				}
			]
		},
		"labels": {
			"patterns": [{
				"name": "entity.name.function.aphelion",
				"match": "^\\s*[A-Za-z_-][A-Za-z0-9_-]*:\\s"
			},{
				"name": "entity.name.function.aphelion",
                "match": "\\s*\\>[A-Za-z_-][A-Za-z0-9_-]*\\s"
			}]
		},
        "characters": {
            "name": "string.quoted.single.aphelion",
            "begin": "'",
            "end": "'",
            "patterns": [
                {
                    "name": "constant.character.escape.aphelion",
                    "match": "\\\\."
                }
            ]
        }
	},
	"scopeName": "source.aphel"
}